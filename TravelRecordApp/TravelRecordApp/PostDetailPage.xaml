<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelRecordApp.PostDetailPage">
    <StackLayout Margin="16,20,16,0"
                 CompressedLayout.IsHeadless="True">
        <Entry x:Name="experienceEntry" 
               Text="Nice place"/>
        <Label x:Name="venueLabel"
               Margin="0,30,0,0"
               FontAttributes="Bold"
               FontSize="22"
               Text="Some fancy cowroking"/>
        <Label x:Name="categoryLabel"
               Text="Coworking space"
               TextColor="{StaticResource blueColor}"/>
        <Label x:Name="addressLabel"
               Text="Av.D. Nuno alvares"
               FontSize="15"/>
        <Label x:Name="coordinatesLabel"
               Text="123.123, 123.34"
               FontSize="15"/>
        <Label x:Name="distanceLabel"
               Text="123m"
               FontSize="15"/>
        <Button x:Name="updateButton"
                Text="Update"
                Clicked="updateButton_Clicked"  
                />
        <Button x:Name="deleteButton"
                Text="Delete"
                TextColor="Red"
                Clicked="deleteButton_Clicked"/>
    </StackLayout>
</ContentPage>